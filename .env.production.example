# IMPORTANTE: Copia este archivo a .env.production y rellena con tus valores reales
# NO SUBAS EL ARCHIVO .env.production A GIT

# --- Django ---
SECRET_KEY=CAMBIA_ESTO_POR_UNA_CLAVE_SECRETA_FUERTE_Y_ALEATORIA
DEBUG=False
ALLOWED_HOSTS=tudominio.com,www.tudominio.com
DOMAIN=tudominio.com

# --- Base de datos ---
DB_NAME=wedding_gallery
DB_USER=root
DB_PASSWORD=CAMBIA_ESTE_PASSWORD_SEGURO
DB_HOST=db
DB_PORT=3306

# --- AWS S3 ---
USE_S3=True
AWS_ACCESS_KEY_ID=tu_access_key_de_aws
AWS_SECRET_ACCESS_KEY=tu_secret_key_de_aws
AWS_STORAGE_BUCKET_NAME=nombre-de-tu-bucket
AWS_S3_REGION_NAME=us-east-1

# --- Superusuario Django (se crea automáticamente) ---
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=tu@email.com
DJANGO_SUPERUSER_PASSWORD=CAMBIA_ESTE_PASSWORD_ADMIN

# --- Email (opcional, para notificaciones) ---
